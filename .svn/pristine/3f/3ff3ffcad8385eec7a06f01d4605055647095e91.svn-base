/**病人清單頁面 CSS***/
.EMRCheckBox {
    display:none;
}
input[type="checkbox"] + label span {
    display:inline-block;
    width:20px;
    height:20px;
    margin:-2px 5px 0 0;
    vertical-align:middle;
    /**background:url(/FangEmrServices/img/ic_check_off.png) left top no-repeat;**/
    background:url(css/../img/unchecked.png)no-repeat;
    cursor:pointer;
}

input[type="checkbox"]:checked + label span {
    background:url(css/../img/checked.png)no-repeat;
    /**background:url(/FangEmrServices/img/ic_check_on.png) -30px top no-repeat;**/
}

@media (min-width: 768px){
    .queryPatientInputWidth{
    	max-width: 120px;
}
}

.EMRLabel {
	font-size:18px;
	color:#000;
}

.EMRLabelBold {
	font-size:18px;
	font-weight:bold;
	color:#000;
}

.container-noPadding{
    padding-right: 0px;
    padding-left: 0px;
    margin-right: auto;
    margin-left: auto;	
}

.input-center{
  text-align:center;
  font-size:16px;
  max-width:45px; 
  margin: 0px;		
}




