.form-control:focus{
	border-width: 2px;
	border-color: purple;
	box-shadow: -1px -1px 2px hsla(0, 0%, 0%, 0.2), 
				1px 1px 1px hsla(0, 0%, 0%, 0.15), 
				1px 1px 1px hsla(0, 0%, 0%, 0.15) inset, 
				-1px -1px 2px hsla(0, 0%, 0%, 0.2);
	outline: 0 none;
}

